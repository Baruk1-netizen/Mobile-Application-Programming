<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom">

    <!-- Cart Button (Floating above) -->
    <FrameLayout
        android:id="@+id/cartContainer"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp">

        <FrameLayout
            android:id="@+id/cartTab"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/circle_background"
            android:elevation="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/cartIcon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_cart"
                    android:tint="@android:color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cart"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />
            </LinearLayout>
        </FrameLayout>
    </FrameLayout>

    <!-- Navigation Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/nav_background"
        android:elevation="8dp"
        android:orientation="horizontal"
        android:paddingBottom="15dp"
        android:weightSum="5">

        <!-- Home -->
        <LinearLayout
            android:id="@+id/homeTab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/homeIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_home_con" />

            <TextView
                android:id="@+id/homeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Home"
                android:textColor="@color/secondary_dark"
                android:textSize="12sp" />

            <View
                android:id="@+id/homeDot"
                android:layout_width="4dp"
                android:layout_height="4dp"
                android:layout_marginTop="2dp"
                android:background="@color/primary_coral"
                android:visibility="invisible" />
        </LinearLayout>

        <!-- Categories -->
        <LinearLayout
            android:id="@+id/categoriesTab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/categoriesIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_categories" />

            <TextView
                android:id="@+id/categoriesText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Categories"
                android:textColor="@color/secondary_dark"
                android:textSize="12sp" />

            <View
                android:id="@+id/categoriesDot"
                android:layout_width="4dp"
                android:layout_height="4dp"
                android:layout_marginTop="2dp"
                android:background="@color/primary_coral"
                android:visibility="invisible" />
        </LinearLayout>

        <!-- Empty space for cart -->
        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <!-- Messages -->
        <LinearLayout
            android:id="@+id/messagesTab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/messagesIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_profile" />

            <TextView
                android:id="@+id/messagesText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Messages"
                android:textColor="@color/secondary_dark"
                android:textSize="12sp" />

            <View
                android:id="@+id/messagesDot"
                android:layout_width="4dp"
                android:layout_height="4dp"
                android:layout_marginTop="2dp"
                android:background="@color/primary_coral"
                android:visibility="invisible" />
        </LinearLayout>

        <!-- Account -->
        <LinearLayout
            android:id="@+id/accountTab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/accountIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_account" />

            <TextView
                android:id="@+id/accountText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Account"
                android:textColor="@color/secondary_dark"
                android:textSize="12sp" />

            <View
                android:id="@+id/accountDot"
                android:layout_width="4dp"
                android:layout_height="4dp"
                android:layout_marginTop="2dp"
                android:background="@color/primary_coral"
                android:visibility="invisible" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>